<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeToolbar" parent="AppTheme">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:queryHint">@string/search_hint</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AboutToolbar" parent="HomeToolbar" >
    </style>

    <style name="ButtonCustom" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/greeny_blue</item>
    </style>

    <style name="TextViewCustom" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginScreen" parent="AppTheme">
        <item name="android:background">@color/beige</item>
        <item name="android:button">@style/ButtonCustom</item>
        <item name="android:textViewStyle">@style/TextViewCustom</item>
    </style>

</resources>
